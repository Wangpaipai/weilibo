/* pages/Gifts/Gifts.wxss */
.GiftsDet{
  width: 650rpx;
  height: 805rpx;
  margin: 0 auto;
  background:rgba(255,255,255,1);
  box-shadow:0px 3px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius:10px;
  margin-top: 76rpx;
  padding-top: 39rpx;
}
.GiftsDetInput{
  width: 510rpx;
  height: 60rpx;
  border-bottom: 1px solid #f5f5f5;
  margin: 0 auto;
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
}
.GiftsDetInput label{
  display: block;
  flex: 3;
  font-size: 36rpx;
}
.GiftsDetInput input{
  flex: 7;
  font-size: 36rpx;
  height: 60rpx;
}
.GiftsInput_placeholder{
  color: #999;
  font-size: 36rpx;
}
.GiftsInput{
  color: #F53636; 
}
/* 选择关系 */
.addGiftsChangeBtn{
  width: 510rpx;
  height: 44rpx;
  margin: 0 auto;
  margin-top: 38rpx;
}
.changeBtn{
  width: 88rpx;
  height: 44rpx;
  margin-left: 21rpx;
  font-size: 26rpx;
  float: left;
  text-align: center;
  line-height: 44rpx;
  background: #f5f5f5;
  color:#999;
}
.change1{
  margin-left: 94rpx;
}
.unChange{
  background: #f5f5f5;
  color:#999;
}
.changeStyle{
  color:#fff;
  background: #F53636;
}
/* 按钮 */
.GiftsDet .GiftsBtn{
  width: 460rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 36rpx;
  background:#F53636;
  border-radius: 10px;
  margin: 0 auto;
  margin-top: 80rpx;
  margin-bottom: 0;
}
.GiftsDet .GiftsBtn_Del{
  margin-top: 40rpx;
}
.GiftsDet .GiftsBtn text{
  width: 100%;
  height: 100%;
  display: block;
  text-align: center;
  color:#fff;
}
.GiftsDet .GiftsBtn_Del{
  color:#999;
  background: #e5e5e5;
}
/* 弹出框 */
.delGift{
  position: relative;
}
.delGiftsImg{
  width: 195rpx;
  height: 54rpx;
  position: absolute;
  top: 10rpx;
  left: 2rpx;
}
.delGiftsImg image{
  width: 100%;
  height: 100%;
}
.delGiftsText{
  width: 250rpx;
  height: 82rpx;
  margin: 82rpx auto;
  font-size: 30rpx;
  color: #333;
}