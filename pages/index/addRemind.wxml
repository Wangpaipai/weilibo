<!--pages/index/addRemind.wxml-->
<view class='container'>
    <form class="addRemindDet" name="Remind_form" bindsubmit='formSubmit'>
        <view class="addRemindName addRemind_text">
          <label>姓名：</label>
          <input type='text'placeholder="输入姓名" placeholder-class='RemindInput_placeholder' class="RemindInput" disabled="{{disabled}}" maxlength='6' bindblur='userName' name='name'/>
        </view>
        <view class="addRemind_text">
          <label>日期:</label>
          <picker mode="multiSelector" value="{{dateTime1}}" bindchange="changeDateTime1" bindcolumnchange="changeDateTimeColumn1" range="{{dateTimeArray1}}" >
      <input type='text'placeholder="选择日期" placeholder-class='RemindInput_placeholder' class="RemindInput dateInput" disabled="true" name='days'value="{{days}}" />
  </picker>
  </view>
        <view class="addRemindMatter addRemind_text">
          <label>事项：</label>
          <input type='text'placeholder="输入提醒事项" placeholder-class='RemindInput_placeholder' class="RemindInput" disabled="{{disabled}}" name="matter" value='{{matter}}'/>
        </view>
        <view class="addRemindSite addRemind_text"  wx:if="{{siteShow}}">
          <label>地址：</label>
          <input type='text'placeholder="输入地址信息" placeholder-class='RemindInput_placeholder' class="RemindInput" disabled="{{disabled}}" name='address'value="{{site}}"/>
        </view>
        <view class="addRemindPhone addRemind_text" wx:if="{{phoneShow}}">
          <label>手机：</label>
          <input type='text'placeholder="输入手机号码" placeholder-class='RemindInput_placeholder' class="RemindInput"  value='{{phone}}' disabled="{{disabled}}" maxlength='11' bindblur='PhoneNum' name='phoneNumber' bindinput='thisPhone'/>
        </view>
        <!-- 验证码 -->
        <view class="addRemindVerify" wx:if="{{show}}">
          <input type='text'placeholder="输入验证码" placeholder-class='RemindInput_placeholder' class="RemindInput"/>
          <button class='Verify_btn' bindtap='getVerificationCode' style='background:#f53636;border:0px;color:{{color}};{{style}}'plain="false" >{{btn_value}}</button>
        </view>
        <!-- 创建，保存，删除按钮 -->
        <button class='create btn' wx:if="{{createShow}}"  form-type='submit'><text>创建</text></button>
        <button class="save btn" wx:if="{{modificationShow}}"  bindtap='modification'><text>修改</text></button>
        <button class="save btn" wx:if="{{saveShow}}" bindtap='save'><text>保存</text></button>
        <button class='Delete btn' wx:if="{{DeleteShow}}" bindtap='Delete'><text>删除</text></button>
    </form>
</view>
<!--弹出框-->
<modal class="delRemind" bindcancel="cancel" bindconfirm="confirm" wx:if="{{hidden}}" >
  <view class="delRemindImg"><image src='../../images/xiangyun.png'></image></view>
  <view class='delRemindText'>
    <text>确定删除该信息，删除后不可恢复</text>
  </view>
</modal>
