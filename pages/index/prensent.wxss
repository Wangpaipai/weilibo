.search{
  width:710rpx;
  height:80rpx;
  box-shadow:0px 3px 5px 0px rgba(0, 0, 0, 0.1),0px -3px 5px 0px rgba(0, 0, 0, 0.1);
  border-radius:10px;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  margin-top: 20rpx;
}
.search .nav_btn{
  flex-grow:0; 
  width: 100%;
  height: 36rpx;
  margin: 7rpx 20rpx 7rpx 20rpx;
}
.search .nav_btn image{
  width:36rpx;
  opacity:0.5;
  margin: 22rpx 20rpx 22rpx 20rpx;
  float: left;
}
.searchText{
  width:635rpx;
  height:100%;
  font-size:30rpx;
