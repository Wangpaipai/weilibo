<!--pages/index/addPrensent.wxml-->
<view class='container'>
  <view class='addPrensentDet'>
    <form class='addPrensentContentDetils' name="Prensent_form" bindsubmit='formSubmit'>
        <view class="addPrensentName addPrensent_text">
          <label>姓名：</label>
          <input type='text'placeholder="输入姓名" placeholder-class='prensentInput_placeholder' class="prensentInput" disabled="{{disabled}}" maxlength='6' bindblur='userName' name='name' value='{{name}}'/>
        </view>
        <view class="addPrensentMoney addPrensent_text">
          <label>金额：</label>
          <input type='digit'placeholder="输入金额" placeholder-class='prensentInput_placeholder' class="prensentInput" name="money" value='{{money}}'/>
        </view>
        <view class="addPrensentDays addPrensent_text">
          <label>日期：</label>
          <picker mode="date"  start="{{date}}" bindchange="getPrensentDays"  disabled="{{disabled}}">
            <input type='text'placeholder="选择日期" placeholder-class='prensentInput_placeholder' class="prensentInput" disabled="true" name='days'value="{{days}}"/>
          </picker>
        </view>
        <view class="addPrensentMatter addPrensent_text">
          <label>事项：</label>
          <input type='text'placeholder="输入提醒事项" placeholder-class='prensentInput_placeholder' class="prensentInput"  disabled="{{disabled}}" name="matter" value='{{matter}}'/>
        </view>
        <view class="addPrensentRelation addPrensent_text">
          <label>关系:</label>
          <input type='text'placeholder="点击下方快速添加" placeholder-class='prensentInput_placeholder' class="prensentInput" name="relation" value='{{relation}}'/>
        </view>
        <!-- 选择关系 -->
        <view class='addPrensentChangeBtn'>
          <view class='{{status== index ? "changeStyle" : "unChange"}} changeBtn' wx:for="{{changeArr}}" wx:for-index="index" wx:for-item="item" data-index='{{index}}' bindtap='prensentChange'><text>{{item}}</text></view>
        </view>
        <!-- 保存，修改，删除按钮 -->
        <button class="prensentBtn" wx:if="{{!modification}}" form-type='submit' style="{{btn_style}}"><text>保存</text></button>
        <button class="prensentBtn prensentBtn_modi" wx:else bindtap='modificationBtn'><text>修改</text></button>
        <button class="prensentBtn prensentBtn_Del" wx:if="{{Delete}}" bindtap='deleteBtn' style="{{btn_style}}"><text>删除</text></button>
    </form>
  </view>
</view>
<!--弹出框-->
<modal class="delPrensent" bindcancel="cancel" bindconfirm="confirm" hidden="{{hidden}}" >
  <view class="delPrensentImg"><image src='../../images/xiangyun.png'></image></view>
  <view class='delPrensentText'>
    <text>确定删除该送礼，删除后不可恢复</text>
  </view>
</modal>
