/* pages/index/feast.wxss */
.search{
  width:710rpx;
  height:80rpx;
  box-shadow:0px 3px 5px 0px rgba(0, 0, 0, 0.1),0px -3px 5px 0px rgba(0, 0, 0, 0.1);
  border-radius:10px;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  margin-top: 20rpx;
}
.search image{
  flex-grow:0; 
  width:100%;
  height:100%;
  opacity:0.5;
  /* margin: 22rpx 20rpx 22rpx 20rpx; */
}
.nav_btn image{
  width:36rpx;
  height: 36rpx;
  opacity:0.5;
  margin: 22rpx 20rpx 22rpx 20rpx;
  float: left;
}
.searchText{
  width:635rpx;
  height:100%;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(153,153,153,0.5);
  font-weight:300;
  line-height: 80rpx;
}
.searchText_placeholder{
  font-weight: 300;
  color:rgba(153,153,153,0.5);
}
/* 送礼统计 */
.feastCount{
  width:710rpx;
  height:170rpx;
  background:rgba(245,54,54,1);
  border-radius:10px;
  margin: 0 auto;
  margin-top: 25rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  color:#fff;
  padding-left: 45rpx;
}
.feastCountTop{
  flex: 1;
  display: flex;
  flex-direction: row;
  line-height: 85rpx;
}
.Toptitle{
  flex-grow: 0;
  height: 100%;
}
.Toptime{
  flex-grow: 0;
  height: 100%;
}
.Toptime image{
  width: 18rpx;
  height: 18rpx;
  display: block;
  float: left;
  margin-top: 33rpx;
  margin-right: 9rpx;
}
.Toptime text{
  font-size: 20rpx;
  float: left;
}
.feastCountBottom{
  flex: 1;
  display: flex;
  flex-direction: row;
  line-height: 85rpx;
  font-size: 30rpx;
  position: relative;
}
.moneyCount,.peopleCount{
  flex-grow: 0;
  height: 100%;

}
.peopleCount{
  margin-left: 45rpx;
}
.moneyCount image,.peopleCount image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  float: left;
  margin-top: 25rpx;
  margin-right: 4rpx;
}
.moneyCount text,.peopleCount text{
  float: left;
}
.feastCountImageBtn{
  position: absolute;
  right: 12rpx;
  bottom: -3rpx;
  width: 80rpx;
  height: 80rpx;
}
.feastCountImageBtn image{
  width: 40rpx;
  height: 40rpx;
}
/* 添加按钮 */
.addBtn{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: 41rpx;
  right: 325rpx;
}
.addBtn navigator{
  width: 100rpx;
  height: 100rpx;
}
/* ++++++++++++++++ */
.search-car{
    height: 80rpx;
    line-height: 80rpx;
    background-color: #ffffff;
    border-bottom: 1rpx solid #e6e6e6;
    display: flex;
    flex-direction: row; 
}
.search-english{
    height: 40rpx;
    background-color: #f0f0f0;
    line-height: 40rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    color: #000000;
}
scroll-view{
    z-index: 20;
    margin-top: 28rpx;
}
.index-english{
    position: absolute;
    width: 30rpx;
    height: auto;
    right: 0;
    font-size: 20rpx;
}
.index-english view{
    width: 20rpx;
    height: 25rpx;
    color:#999999;
    margin-bottom: 5rpx;
    text-align: center;
    line-height: 20rpx;
}
.index-name{
    text-align: center;
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #000000;
    width: 100px;
    height: 100px;
    font-size: 48px;
    background-color: rgba(0, 0, 0, 0.4);
    line-height: 100px;
}
.search_name,.search_money,.search_matter,.search_date{
  flex-grow: 0;
  font-size: 28rpx;
  color:#333;
}
.search_name{
  margin-left: 19rpx;
  margin-right: 121rpx;
}
.search_money,.search_matter{
  margin-right: 100rpx;
}
