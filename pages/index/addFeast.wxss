/* pages/index/addFeast.wxss */
.addFeastContent{
  width: 581rpx;
  height: 597rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 3rpx 10rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius:10px;
  margin-left: 84rpx;
  margin-top: 238rpx;
  padding-top: 10rpx;

}
.addFeastContentImg{
  width: 560rpx;
  height: 45rpx;
  margin: 0rpx auto;
  margin-bottom: 10rpx;
}
.addFeastContentImg image{
  display: block;
  width: 45rpx;
  height: 45rpx;
  float: left;
}
.addFeastContentImg image:nth-child(2){
  float: right;
}
.addFeastContentDetils{
  width: 470rpx;
  height: 426rpx;
  margin: 0 auto;
  line-height: 60rpx;
}
.feastName,.feastDays{
  display: flex;
  flex-direction: row;
  height: 60rpx;
  border-bottom: 1px solid #f5f5f5;
  margin: 60rpx auto 60rpx auto;
}
.addFeastContentDetils view label{
  display: block;
  flex: 3;
  font-size: 36rpx;
}
.feastInput_placeholder{
  color: #999;
  font-size: 36rpx;
}
.feastInput{
  color: #F53636;
  font-size: 36rpx;
}
.feastInput,picker{
  flex: 7;
  font-size: 36rpx;
  height: 60rpx;
}
.addFeastContentDetils .feastBtn{
  width: 460rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 36rpx;
  background:#F53636;
  border-radius: 10px;
  margin-bottom: 0;
}
.addFeastContentDetils .feastBtn_Del{
  margin-top: 40rpx;
}
.addFeastContentDetils .feastBtn text{
  width: 100%;
  height: 100%;
  display: block;
  text-align: center;
  color:#fff;
}
.addFeastContentDetils .feastBtn_Del{
  color:#999;
  background: #e5e5e5;
}
/* 弹出框 */
.delFeast{
  position: relative;
}
.delFeastImg{
  width: 195rpx;
  height: 54rpx;
  position: absolute;
  top: 10rpx;
  left: 2rpx;
}
.delFeastImg image{
  width: 100%;
  height: 100%;
}
.delFeastText{
  width: 250rpx;
  height: 82rpx;
  margin: 82rpx auto;
  font-size: 30rpx;
  color: #333;
}
