/**index.wxss**/
page{
  margin-bottom:100rpx; 
  background:#fff;
}
swiper{
  height: 420rpx;
  width: 750rpx;
}
/* 搜索 */
.search{
  width: 710rpx;
  height: 60rpx;
  line-height: 60rpx;
  position: fixed;
  top: 10rpx;
  z-index: 999;
  background:rgba(255,255,255,0.5);
  border-radius:10rpx;
  left: 20rpx;
  display: flex;
  flex-direction: row;
}
.search .nav_btn{
  flex-grow:0; 
  width: 100%;
  height: 36rpx;
  margin: 7rpx 20rpx 7rpx 20rpx;
}
.nav_btn image{
  width: 36rpx;
}
.searchText{
  color: #Fff;
  width: 640rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  position: absolute;
  left: 66rpx;
  top: 0rpx;
}
.searchText_placeholder{
  color: #fff;
}
.banner{
  height:420rpx;
}
.banner a image{
  width: 100%;
  height: 100%;
}
.tixing_btn,.tixingDet{
  width:710rpx;
  height:88rpx;
  background:rgba(245,54,54,1);
  border:1px solid rgba(245,54,54,1);
  box-shadow:0rpx 5rpx 10rpx 0rpx rgba(245,54,54,0.5);
  border-radius:10px;
  margin: 0 auto;
  margin-top: 24rpx;
}
.tx_det_btn{
  width: 592rpx;
  height:100%;
  color:#fff;
  font-size: 30rpx;
  line-height: 88rpx; 
  border-right: 1px solid #C50606;
  float: left;
}
.tx_det_btn image{
  display: block;
  width: 25rpx;
  height: 29rpx;
  margin-top:32rpx;
  margin-left: 54rpx;
  margin-right: 14rpx;
  float: left;
}
.tx_det_btn p{
  display: block;
  letter-spacing: 3.5rpx;
  float: left;
}
.addTx{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-top: 19rpx;
  margin-left: 34rpx;
}
.tixing_btn .nav_btn image{
  display: block;
  width: 25rpx;
  height:29rpx;
  margin-top:30rpx;
  margin-left: 236rpx;
  margin-right: 18rpx;
  float: left;
}
.tixing_btn .nav_btn p{
  float: left;
  line-height: 88rpx;
  color:#fff;
  font-size: 30rpx;
}
.money{
  width: 710rpx;
  margin: 0 auto;
}
.money view{
  width: 344rpx;
  height: 150rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 3px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius:10px;
  float: left;
  margin-top: 33rpx;
  text-align: center;
}
.money view:nth-child(1){
  margin-right:22rpx;
}
.money view text{
  display: block;
  width: 100%;
  font-size: 24rpx;
  color:#666;
  margin-top: 24rpx;
}
.money view p{
  display: block;
  font-size: 30rpx;
  color:#F53636;
  width: 100%;
  margin-top: 16rpx;
}
.money view p span{
  font-size: 48rpx;
}
/* 内容为空 */
.indexContentNull,.indexContent{
  width: 710rpx;
  margin: 0 auto;
  background: #fff;
}
.indexContentNull image{
   width:94rpx;
   height: 106rpx;
   margin-top:82rpx;
   margin-left: 312rpx; 
}
.nullText{
  width: 242rpx;
  height: 74rpx;
  font-size: 28rpx;
  color:#999;
  margin-left: 254rpx;
  margin-top: 35rpx;
}
/* 内容不为空 */
.contentList{
  width: 100%;
  display: flex;
  flex-direction:column; 
}
.contentItem{
  flex: 1;
  height: 120rpx;
  border-bottom: 1px solid #F5F5F5;
  margin-top: 31rpx;
  display: flex;
}
.contentItemImage{
  flex-grow: 0;
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  color:#F53636;
  text-align: center;
  line-height: 80rpx;
  font-weight: 500;
  background-repeat:no-repeat;
  background-size:contain;
  background-image:url("https://libo.mx5918.com/weilibu/images/huanq.png");
}
.itemText{
  flex: 2;
  height: 100%;
}
.itemText_detils{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.itemText_detils text,.itemText_detils p{
  flex: 1;
  line-height: 60rpx;
}
.itemText_detils text{
  font-size: 30rpx;
  color:#333;
}
.itemText_detils p,.itemText_time,.itemText_money{
  font-size: 28rpx;
}
.itemText_money,.itemText_time{
  line-height: 180rpx;
  color:#F53636;
}
.itemText_time,.itemText_detils p{
  color:#999;
}
.itemText_time text{
  display: inline-block;
  width: 100%;
  text-align: right;
}
.itemText_money{
  margin-left: 21rpx;
}
/* 添加礼簿 */
.addBtn{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 41rpx;
  right: 20rpx;
}
.addBtn navigator{
  width: 100rpx;
  height: 100rpx;
}
